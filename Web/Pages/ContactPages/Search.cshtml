@page
@model Web.Pages.ContactPages.SearchModel
@using Web.Models 
@{
    ViewData["Title"] = "Search";
}

<h1 class="bg-info text-white">Search a Contact</h1>
<a asp-page="Index" class="btn btn-secondary">View all contacts</a>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.contact.Name"></label>
        <input type="text" asp-for="@Model.contact.Name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.contactList != null)
{
    <h2 class="bg-danger text-white m-2">Result</h2>
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (Contact contact in Model.contactList)
    {
        <tr>
            <td>@contact.Id</td>
            <td>@contact.Name</td>
            <td>@contact.Email</td>
            <td>@contact.Phone</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-page="Update" asp-route-id="@contact.Id">Update</a>
            </td>
            <td>
                <form asp-page-handler="Delete" asp-route-id="@contact.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
}

