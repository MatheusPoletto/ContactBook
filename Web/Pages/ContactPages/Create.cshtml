@page
@model Web.Pages.ContactPages.CreateModel
@{
    ViewData["Title"] = "Create a Contact";
}

<h1 class="bg-info text-white">Create a Contact</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.contact.Name"></label>
        <input type="text" asp-for="@Model.contact.Name" class="form-control" />
        <span asp-validation-for="@Model.contact.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.contact.Email"></label>
        <input type="text" asp-for="@Model.contact.Email" class="form-control" />
        <span asp-validation-for="@Model.contact.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.contact.Phone"></label>
        <input type="text" asp-for="@Model.contact.Phone" class="form-control" />
        <span asp-validation-for="@Model.contact.Phone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>

</form>