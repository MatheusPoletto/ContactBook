@page
@model Web.Pages.ContactPages.UpdateModel
@{
    ViewData["Title"] = "Update a Contact";
}

<h1 class="bg-info text-white">Update a Contact</h1>
<a asp-page="Index" class="btn btn-secondary">View all contacts</a>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post">
    <div class="form-group">
        <label asp-for="contact.Id"></label>
        <input type="text" asp-for="contact.Id" readonly class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="contact.Name"></label>
        <input type="text" asp-for="contact.Name" class="form-control" />
        <span asp-validation-for="contact.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="contact.Email"></label>
        <input type="text" asp-for="contact.Email" class="form-control" />
        <span asp-validation-for="contact.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="contact.Phone"></label>
        <input type="text" asp-for="contact.Phone" class="form-control" />
        <span asp-validation-for="contact.Phone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>

</form>